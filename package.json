{
    "name": "xpanse-ui",
    "version": "1.0.15",
    "private": true,
    "type": "module",
    "dependencies": {
        "@ant-design/icons": "^5.4.0",
        "@axa-fr/react-oidc": "^7.22.21",
        "@hey-api/openapi-ts": "^0.51.0",
        "@tanstack/react-query": "^5.51.21",
        "antd": "^5.20.0",
        "echarts": "5.5.1",
        "echarts-for-react": "^3.0.2",
        "rc-field-form": "^2.2.1",
        "rc-menu": "^9.14.1",
        "rc-tabs": "^15.1.1",
        "react": "^18.2.0",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.25.1",
        "react-timer-hook": "^3.0.7",
        "yaml": "^2.5.0",
        "zustand": "^4.5.4"
    },
    "scripts": {
        "start": "vite --port 3000",
        "build": "vite build",
        "serve": "vite preview --port 3000",
        "start-with-zitadel-testbed": "env-cmd -f .env.zitadel-testbed vite --port 3000",
        "build-with-zitadel-testbed": "env-cmd -f .env.zitadel-testbed vite build",
        "test": "jest",
        "update-service-worker-file": "node ./node_modules/@axa-fr/oidc-client/bin/copy-service-worker-files.mjs public"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended-type-checked",
            "plugin:@typescript-eslint/stylistic-type-checked",
            "plugin:@typescript-eslint/strict-type-checked",
            "plugin:prettier/recommended",
            "plugin:deprecation/recommended",
            "plugin:react/recommended",
            "plugin:css-modules/recommended"
        ],
        "plugins": [
            "react",
            "@typescript-eslint",
            "@tanstack/query",
            "require-explicit-generics",
            "css-modules"
        ],
        "rules": {
            "react/jsx-uses-react": "error",
            "react/jsx-uses-vars": "error",
            "no-undef": "off",
            "@typescript-eslint/no-inferrable-types": "off",
            "@tanstack/query/exhaustive-deps": "error",
            "no-console": "error",
            "@typescript-eslint/no-dynamic-delete": "off",
            "react/react-in-jsx-scope": "off",
            "import/newline-after-import": [
                "error",
                {
                    "count": 1
                }
            ],
            "css-modules/no-undef-class": [
                2,
                {
                    "camelCase": true
                }
            ],
            "css-modules/no-unused-class": "off"
        },
        "ignorePatterns": [
            "src/xpanse-api/**",
            "/public/OidcServiceWorker.js",
            "/public/inject.js",
            "dist",
            "node_modules",
            "/public/OidcTrustedDomains.js"
        ],
        "root": true,
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": true
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@axa-fr/oidc-client": "^7.22.18",
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@tanstack/eslint-plugin-query": "^5.51.15",
        "@testing-library/jest-dom": "^6.4.8",
        "@testing-library/react": "^16.0.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.1.0",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "@vitejs/plugin-react": "^4.3.1",
        "env-cmd": "^10.1.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-react-app": "7.0.1",
        "eslint-plugin-css-modules": "^2.12.0",
        "eslint-plugin-deprecation": "^3.0.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.35.0",
        "eslint-plugin-require-explicit-generics": "^1.0.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "knip": "^5.27.0",
        "prettier": "3.3.3",
        "prettier-plugin-organize-imports": "^4.0.0",
        "release-it": "^17.6.0",
        "ts-jest": "^29.2.3",
        "typescript": "5.5.4",
        "uuid": "^10.0.0",
        "vite": "^5.3.5"
    },
    "overrides": {
        "react-scripts": {
            "typescript": "^5"
        },
        "eslint-config-react-app": {
            "@typescript-eslint/eslint-plugin": "^8.0.0"
        }
    },
    "knip": {
        "ignore": [
            "src/xpanse-api/**",
            "public/OidcServiceWorker.js",
            "public/inject.js",
            "src/config/index.d.ts",
            "src/react-app-env.d.ts",
            "public/OidcTrustedDomains.js",
            "openapi-ts.config.ts"
        ],
        "ignoreDependencies": [
            "@babel/plugin-proposal-private-property-in-object",
            "@hey-api/openapi-ts",
            "@types/jest"
        ],
        "ignoreBinaries": [
            "zip"
        ]
    },
    "release-it": {
        "github": {
            "release": true,
            "releaseNotes": "git log --no-merges --pretty=format:\"* %s %h\" ${latestTag}...main",
            "assets": [
                "*.zip"
            ]
        },
        "npm": {
            "publish": false
        },
        "hooks": {
            "before:init": [
                "git update-index -q --refresh"
            ],
            "after:bump": [
                "npm run update-service-worker-file",
                "npm run build",
                "zip -r -q xpanse-ui-${version}.zip dist"
            ]
        }
    }
}
