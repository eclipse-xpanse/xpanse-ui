{
    "name": "xpanse-ui",
    "version": "1.0.4",
    "private": true,
    "type": "module",
    "dependencies": {
        "@ant-design/icons": "^5.2.6",
        "@axa-fr/react-oidc": "^7.7.0",
        "@tanstack/react-query": "^5.0.5",
        "antd": "^5.10.2",
        "echarts": "5.4.3",
        "echarts-for-react": "^3.0.2",
        "rc-field-form": "^1.40.0",
        "rc-menu": "^9.12.2",
        "rc-tabs": "^12.13.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.17.0",
        "react-timer-hook": "^3.0.7",
        "yaml": "^2.3.3",
        "zustand": "^4.4.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "start-with-zitadel-testbed": "env-cmd -f .env.zitadel-testbed react-scripts start",
        "build-with-zitadel-testbed": "env-cmd -f .env.zitadel-testbed react-scripts build",
        "build": "react-scripts build",
        "test": "jest",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended-type-checked",
            "plugin:@typescript-eslint/stylistic-type-checked",
            "plugin:@typescript-eslint/strict-type-checked",
            "plugin:prettier/recommended"
        ],
        "plugins": [
            "react",
            "@typescript-eslint",
            "@tanstack/query",
            "require-explicit-generics"
        ],
        "rules": {
            "react/jsx-uses-react": "error",
            "react/jsx-uses-vars": "error",
            "no-undef": "off",
            "@typescript-eslint/no-inferrable-types": "off",
            "@tanstack/query/exhaustive-deps": "error",
            "no-console": "error"
        },
        "ignorePatterns": [
            "src/xpanse-api/**",
            "/public/OidcServiceWorker.js",
            "/public/inject.js",
            "build",
            "node_modules",
            "/public/OidcTrustedDomains.js"
        ],
        "root": true,
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": true
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@tanstack/eslint-plugin-query": "^5.0.5",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@types/node": "^16.18.12",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@typescript-eslint/parser": "^6.5.0",
        "env-cmd": "^10.1.0",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-react-app": "7.0.1",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-require-explicit-generics": "^0.4.2",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "knip": "^2.38.0",
        "openapi-typescript-codegen": "^0.25.0",
        "prettier": "3.0.3",
        "react-scripts": "5.0.1",
        "release-it": "^16.2.1",
        "ts-jest": "^29.1.1",
        "typescript": "5.2.2"
    },
    "overrides": {
        "react-scripts": {
            "typescript": "^5"
        },
        "eslint-config-react-app": {
            "@typescript-eslint/eslint-plugin": "^6.5.0"
        }
    },
    "knip": {
        "ignore": [
            "src/xpanse-api/**",
            "public/OidcServiceWorker.js",
            "public/inject.js",
            "src/config/index.d.ts",
            "src/react-app-env.d.ts",
            "public/OidcTrustedDomains.js"
        ],
        "ignoreDependencies": [
            "@babel/plugin-proposal-private-property-in-object",
            "openapi-typescript-codegen"
        ],
        "ignoreBinaries": [
            "zip"
        ]
    },
    "release-it": {
        "github": {
            "release": true,
            "releaseNotes": "git log --no-merges --pretty=format:\"* %s %h\" ${latestTag}...main",
            "assets": [
                "*.zip"
            ]
        },
        "npm": {
            "publish": false
        },
        "hooks": {
            "before:init": [
                "git update-index -q --refresh"
            ],
            "after:bump": [
                "npm run build",
                "zip -r -q xpanse-ui-${version}.zip build"
            ]
        }
    }
}
